  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class=" " style="border-radius: 1rem; border: none; ">
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">

                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                <p class="text-white-50 mb-5">Please enter your login and password!</p>
                <form action="" method="post">
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="typeEmailX" style="color: black;font-size: medium;">Email</label>
                    <input type="email"  class="form-control form-control-lg "
                      style="border: solid .1px;box-shadow: none ; border-radius: 2rem " name="username" />
                  </div>
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="typePasswordX"
                      style="color: black;font-size: medium;">Password</label>
                    <input type="password"  class="form-control form-control-lg"
                      style="border: solid .1px;box-shadow: none; border-radius: 2rem " name="password" />
                  </div>
                  <div class="form-outline form-white mb-4">

                    <% if(typeof message !=="undefined" ) { %>
                      <h5 style="font-size: 14px;color: brown;">
                        <%=message %>
                      </h5>
                      <%}%>
                  </div>
                  <p class="small  pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                  <button class="btn btn-outline-light btn-lg px-5" type="submit"
                    style="background-color: black;">LOGIN</button>

                  <!-- <p class="mt-4">Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a> -->
                </form>
              </div>



            </div>
          </div>
        </div>
